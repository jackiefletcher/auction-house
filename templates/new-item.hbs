<h3>New Item</h3>
<form>
  <div class="form-group">
    <label for="name">Item name:</label>
    {{input value=name id="name" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    {{input value=description id="description" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="auctionDate">Auction Date:</label>
    {{input type="date" value=auctionDate id="auctionDate" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        {{input value=price id="price" class="form-control"}}
      </div>
  </div>
  <div class="form-group">
    <label for="imgUrl">Image URL:</label>
    <div class="input-group">
      <div class="input-group-addon">www.</div>
      {{input value=imgUrl id="imgUrl" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="backStory">Back story:</label>
    {{textarea value=backStory id="backStory" class="form-control"}}
  </div>
  <button class="btn btn-primary" {{action 'save'}}>Add</button>
</form>
