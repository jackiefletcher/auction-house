  <form>
    <div class="form-group">
      <label for="name">Lot name:</label>
      {{input value=name id="name" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      {{input value=description id="description" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="auctionDate">Auction Date:</label>
      {{input value=auctionDate id="auctionDate" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      {{input value=price id="price" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="imgUrl">Image URL:</label>
      {{input value=imgUrl id="imgUrl" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="backStory">Back story:</label>
      {{input value=backStory id="backStory" class="form-control"}}
    </div>
    <button class="btn btn-primary" {{action 'save'}}>Add</button>
  </form>
